    <script>
        // Simple animation for messages
        document.addEventListener('DOMContentLoaded', function() {
            const messages = document.querySelectorAll('.message');
            messages.forEach((message, index) => {
                message.style.opacity = 0;
                message.style.transform = 'translateY(10px)';
                setTimeout(() => {
                    message.style.transition = 'opacity 0.5s, transform 0.5s';
                    message.style.opacity = 1;
                    message.style.transform = 'translateY(0)';
                }, 500 + (index * 200));
            });
            
            // Pulse animation for CTA button
            const ctaButton = document.querySelector('.hero .btn');
            setInterval(() => {
                ctaButton.classList.toggle('pulse');
            }, 2000);
            
            // Upload area interaction
            const uploadArea = document.querySelector('.upload-area');
            uploadArea.addEventListener('click', function() {
                this.style.borderColor = 'var(--accent)';
                this.innerHTML = `
                    <div class="upload-icon"><i class="fas fa-spinner fa-spin"></i></div>
                    <p>Processing your document...</p>
                `;
                
                setTimeout(() => {
                    this.innerHTML = `
                        <div class="upload-icon"><i class="fas fa-check"></i></div>
                        <p>Document processed successfully!</p>
                        <p style="color: var(--accent); margin-top: 10px;"><i class="fas fa-file-alt"></i> Annual_Report_2023.pdf</p>
                    `;
                    this.style.borderColor = 'var(--accent)';
                }, 2000);
            });
        });
    </script>
